
@model ERPSchoolManagementWeb.Models.Request.UserRegistrationRequest 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="content-header row">
</div>
<div class="content-body">
    <section class="row flexbox-container">
        <div class="col-12 d-flex align-items-center justify-content-center">
            <div class="col-lg-4 col-md-8 col-10 box-shadow-2 p-0">
                <div class="card border-grey border-lighten-3 px-1 py-1 m-0">
                    <div class="card-header border-0 pb-0">
                        <div class="card-title text-center">
                            <img src="~/Content/app-assets/images/logo/logo-dark.png" alt="branding logo">
                        </div>
                        <h6 class="card-subtitle line-on-side text-muted text-center font-small-3 pt-2"><span>Easily Using</span></h6>
                    </div>
                    <div class="card-content">
                        <div class="text-center">
                            <a href="#" class="btn btn-social-icon mr-1 mb-1 btn-outline-facebook"><span class="la la-facebook"></span></a>
                            <a href="#" class="btn btn-social-icon mr-1 mb-1 btn-outline-twitter"><span class="la la-twitter"></span></a>
                            <a href="#" class="btn btn-social-icon mr-1 mb-1 btn-outline-linkedin"><span class="la la-linkedin font-medium-4"></span></a>
                            <a href="#" class="btn btn-social-icon mr-1 mb-1 btn-outline-github"><span class="la la-github font-medium-4"></span></a>
                        </div>
                        <p class="card-subtitle line-on-side text-muted text-center font-small-3 mx-2 my-1">
                            <span>
                                OR Using
                                Email
                            </span>
                        </p>
                        <div class="card-body">
                            <form class="form-horizontal" id="Registration_Form" novalidate>
                                <fieldset class="form-group position-relative has-icon-left">
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Your  Username" } })
                                    <div class="form-control-position">
                                        <i class="la la-user"></i>
                                    </div>
                                </fieldset>
                                <fieldset class="form-group position-relative has-icon-left">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Your Email Id" } })
                                    <div class="form-control-position">
                                        <i class="la la-envelope"></i>
                                    </div>
                                </fieldset>
                                <fieldset class="form-group position-relative has-icon-left">
                                    @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control", placeholder = "Your Contact" } })
                                    <div class="form-control-position">
                                        <i class="la la-mobile"></i>
                                    </div>
                                </fieldset>
                                <fieldset class="form-group position-relative has-icon-left">
                                    @Html.DropDownList("RoleId", (IEnumerable<SelectListItem>)ViewData["Roles"], "Please Select Role", new { @class = "form-control rounded-right" })
                                    <div class="form-control-position">
                                        <i class="la la-user-secret"></i>
                                    </div>
                                </fieldset>
                                <fieldset class="form-group position-relative has-icon-left">
                                    <select class="form-select form-control" aria-label="Default select example" required id="YearSession" name="YearSession">
                                        <option selected>Select Session</option>
                                        <option value="1">2020-2021</option>
                                        <option value="2">2019-2020</option>
                                        <option value="3">2018-2019</option>
                                    </select>
                                    <div class="form-control-position">
                                        <i class="la la-calendar"></i>
                                    </div>
                                </fieldset>
                                <div class="form-group row">
                                    <div class="col-sm-6 col-12 text-center text-sm-left pr-0">
                                        <fieldset>
                                            <input type="checkbox" id="remember-me" class="chk-remember">
                                            <label for="remember-me"> Remember Me</label>
                                        </fieldset>
                                    </div>
                                    <div class="col-sm-6 col-12 float-sm-left text-center text-sm-right"><a href="recover-password.html" class="card-link">Forgot Password?</a></div>
                                </div>
                                <a href="#" id="registration_Submit" class="btn btn-outline-info btn-block"><i class="la la-user"></i> Register</a>
                            </form>
                        </div>
                        <div class="card-body">
                            <a href="login-with-bg-image.html" class="btn btn-outline-danger btn-block">
                                <i class="ft-unlock"></i>
                                Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#registration_Submit').click(function () {
                    GetRegistration();
            });
        });
    </script>
    <script type="text/javascript">

        function GetRegistration() {

                $.ajax({
                    type: "POST",
                    url: '/Registration/GetRegister',
                    //data: '{email: ' + JSON.stringify($('#EmailId').val()) + '}',
                    dataType: "json",

                    data: $("#Registration_Form").serialize(),

                    success: function (res) {
                        if (res) {
                            alert("Success.");
                            window.location.href = "/Login/Index";
                        }
                    },
                    error: function (res) {

                        alert("Please try after sometime");

                    },
                });

        }
    </script>
}