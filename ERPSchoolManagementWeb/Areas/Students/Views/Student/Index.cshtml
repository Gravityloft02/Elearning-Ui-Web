@model IEnumerable<ERPSchoolManagementWeb.Models.CustomStudentModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header row">
    <div class="content-header-left col-md-6 col-12 mb-2">
        <h3 class="content-header-title">Student List</h3>
        <div class="row breadcrumbs-top">
            <div class="breadcrumb-wrapper col-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","Default")">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","Student",new{area="Students"})">Students</a>
                    </li>
                    <li class="breadcrumb-item active">
                        All Students
                    </li>
                </ol>
            </div>
        </div>
    </div>

</div>
<div class="content-body">
    <!-- List Of All Patients -->

    <section id="students-list">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Students List</h2>
                        <div class="heading-elements">
                            <a href="@Url.Action("New","Student",new { area = "Students" })" class="btn btn-danger round btn-sm">
                                <i class="la la-plus font-small-2"></i>
                                Add Student
                            </a>
                        </div>
                    </div>
                    <div class="card-body collapse show">
                        <div class="card-body card-dashboard">
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered patients-list">
                                <thead>
                                    <tr>
                                        <th>Student Name</th>
                                        <th>Father Name</th>
                                        <th>Mobile</th>
                                        <th>Email</th>
                                        <th>DOB</th>
                                        <th>Class</th>
                                        <th>Section</th>
                                        <th>Address</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.StudentName</td>
                                                <td>@item.FathersName</td>
                                                <td>@item.FathersMobno</td>
                                                <td>@item.FathersEmail</td>
                                                <td>@item.StudentDob</td>
                                                <td>@item.Class</td>
                                                <td>@item.Section</td>
                                                <td>@item.StudentAddress</td>
                                                <td>
                                                    <a href="#"><i class="ft-edit text-success"></i></a>
                                                    <a href="#"><i class="ft-trash-2 ml-1 text-warning"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Student Name</th>
                                        <th>Father Name</th>
                                        <th>Mobile</th>
                                        <th>Email</th>
                                        <th>DOB</th>
                                        <th>Class</th>
                                        <th>Section</th>
                                        <th>Address</th>
                                        <th>Actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- END: Content-->